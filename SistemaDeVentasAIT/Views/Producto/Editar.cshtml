@model SistemaDeVentasAIT.Models.Producto

<h2>Editar Producto</h2>

<form asp-action="Editar" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label class="form-label">Nombre</label>
        <input type="text" asp-for="Nombre" class="form-control" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Precio</label>
        <input type="number" asp-for="Precio" class="form-control" step="0.01" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Stock</label>
        <input type="number" asp-for="Stock" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger mt-3">@TempData["ErrorMessage"]</div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success mt-3">@TempData["SuccessMessage"]</div>
}
