@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <script defer>
        function toggleTheme() {
            document.documentElement.classList.toggle('dark');
        }
    </script>
</head>
<body class="bg-gray-100 dark:bg-gray-900 flex items-center justify-center min-h-screen">

    <!-- Tarjeta de Login -->
    <div class="bg-white dark:bg-gray-800 shadow-xl rounded-xl p-8 w-full max-w-sm">
        <!-- Logo -->
        <div class="flex justify-center mb-6">
            <div class="w-12 h-12 bg-blue-500 rounded-lg flex items-center justify-center">
                <span class="text-white text-2xl font-bold">⨁</span>
            </div>
        </div>

        <!-- Título -->
        <h2 class="text-center text-gray-800 dark:text-white text-2xl font-semibold mb-4">Iniciar Sesión</h2>

        <!-- Formulario -->
        <form method="post" asp-action="Login" class="space-y-4">
            <!-- Campo Usuario -->
            <div>
                <label class="text-gray-600 dark:text-gray-300 block text-sm font-medium mb-1">Usuario</label>
                <input type="text" name="nombre" class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 bg-gray-100 dark:bg-gray-700 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 transition" required>
            </div>

            <!-- Campo Contraseña -->
            <div>
                <label class="text-gray-600 dark:text-gray-300 block text-sm font-medium mb-1">Contraseña</label>
                <input type="password" name="password" class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 bg-gray-100 dark:bg-gray-700 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 transition" required>
            </div>

            <!-- Botón de Login -->
            <button type="submit" class="w-full bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 rounded-lg transition">
                Ingresar
            </button>
        </form>

        <!-- Alternativas -->
        <div class="text-center text-sm text-gray-500 dark:text-gray-400 mt-4">
            ¿No tienes cuenta? <a asp-controller="Login" asp-action="Planes" class="text-blue-500 hover:underline">Ver planes</a>

        </div>
    </div>

</body>
</html>
